<?xml version='1.0' encoding='utf-8'?>
<widget id="com.getordering.admin" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Get Ordering Admin</name>
    <description>
        App for restaurant owners to receive orders.
    </description>
    <author email="info@getordering.com.au" href="http://cordova.io">
        Get Ordering Team
    </author>
    <content src="index.html" />
	<preference name="phonegap-version" value="cli-9.0.0" />
   
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
		<plugin name="cordova-plugin-whitelist" version="1.3.4" />
		<plugin name="cordova-plugin-fcm-ng" version="5.1.1"/>
        <allow-intent href="market:*" />
		<resource-file src="google-services.json" target="app/google-services.json" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>